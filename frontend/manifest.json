{
  "manifest_version": 3,
  "name": "Sherpa - Navigate with clarity",
  "version": "1.0.0",
  "description": "AI-powered webpage structure summaries for screen reader users",
  "permissions": [
    "activeTab",
    "tts",
    "storage",
    "sidePanel",
    "offscreen",
    "tabCapture",
    "webRequest"
  ],
  "commands": {
    "toggle-side-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Sherpa side panel"
    },
    "analyze-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Analyze current page structure"
    },
    "quick-navigation": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      },
      "description": "Open quick navigation"
    }
  },
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "http://sherpa-hackharvard2025-production.up.railway.app/*",
    "https://sherpa-hackharvard2025-production.up.railway.app/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "permission.html", 
        "offscreen.html", 
        "assets/viscous-liquid-fall-in-83980.mp3",
        "assets/notification-291227.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
