{
  "manifest_version": 3,
  "name": "Project Atlas - AI Page Summaries",
  "version": "1.0.0",
  "description": "AI-powered webpage structure summaries for screen reader users",
  "permissions": [
    "activeTab",
    "tts",
    "storage"
  ],
  "optional_permissions": [
    "microphone"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://dev.your-api-server.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}